<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="headline-styles.css" />
    <title>Headlines</title>
  </head>
  <body>
    <header class="bg-primary text-white py-3 mb-4">
      <div class="container">
        <div class="row">
          <div class="col">
            <h1 class="text-center">News Aggregator</h1>
            <p class="text-center">Stay up-to-date with the latest headlines</p>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-md-12">
            <p class="text-center header-info-text">
              <%=numHeadlines%> headlines from <%=getCountryName(country)%>
            </p>
            <p class="text-center text-muted fs-6">
              <em> Click the title to read the full article.</em>
            </p>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row gx-5">
        <% articleData.forEach((article) => { %>
        <div class="col-12 col-md-3 mb-4">
          <div class="card">
            <img
              src="<%=article.urlToImage%>"
              class="img-fluid article-image card-img-top"
            />
            <div class="card-body">
              <span class="badge bg-danger px-2 py-1 shadow-1-strong mb-3"
                >News of the day</span
              >
              <p class="date-time-stamp text-muted">
                Published at: <%=article.publishedAt%>
              </p>
              <a href="<%=article.url%>" class="headline-title">
                <h4>
                  <strong><%= article.title %></strong>
                </h4></a
              >
              <p class="text-muted"><%= article.description %></p>
              <p class="text-muted source">Source: <%=article.source.name%></p>
            </div>
          </div>
        </div>

        <%})%>
      </div>
    </div>
    <footer class="footer mt-auto py-3 bg-light">
      <div class="container text-center">
        <span class="text-muted">&copy; 2023 | Andrew Butler</span>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
